# Display number of running jobs (started with &)
ssp_jobs() {
  if [ ${ssp_running} -ne 0 ] || [ ${ssp_stopped} -ne 0 ]; then
    echo -n "${LB}Jobs:${ssp_running}r/${ssp_stopped}s${RB}"
  fi
}

