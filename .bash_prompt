# Display current load average
ssp_load() {
  local osName=$(uname)
  case $osName in
    Darwin)    local OS=Darwin  ;;
    SunOS)     local OS=SunOS   ;;
    *)         local OS=Linux   ;;
  esac

  case "$OS" in
    Linux)
      local load eol
      read load eol < /proc/loadavg
      ;;
    Darwin)
      local load
      load=$(LANG=C sysctl -n vm.loadavg | awk '{print $2}')
      ;;
    SunOS)
      LANG=C uptime | awk '{print substr($10,0,length($10))}'
      esac
      echo "${LB}${load}âŒ‚${RB}"
}

